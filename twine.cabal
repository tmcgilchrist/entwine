name:                  twine
version:               0.0.1
license:               BSD3
license-file:          LICENSE
author:                Ambiata <info@ambiata.com>
maintainer:            Tim McGilchrist <timmcgil@gmail.com>
copyright:             (c) 2015 Ambiata.
synopsis:              twine
category:              System
cabal-version:         >= 1.8
build-type:            Simple
description:           twine.

library
  build-depends:
                       base                            >= 3          && < 5
                     , async                           >= 2.0        && < 2.2
                     , containers                      >= 0.5        && < 0.7
                     , exceptions                      >= 0.6        && < 0.9
                     , monad-loops                     == 0.4.*
                     , SafeSemaphore                   == 0.10.*
                     , stm                             == 2.4.*
                     , text                            == 1.2.*
                     , time                            >= 1.4        && < 1.9
                     , transformers                    >= 0.3        && < 0.6
                     , transformers-either             == 0.1.*

  ghc-options:
                       -Wall

  hs-source-dirs:
                       src


  exposed-modules:
                       Twine
                       Twine.Async
                       Twine.Data
                       Twine.Data.Duration
                       Twine.Data.Finalizer
                       Twine.Data.Gate
                       Twine.Data.Parallel
                       Twine.Data.Pin
                       Twine.Data.Queue
                       Twine.Loop
                       Twine.Parallel
                       Twine.P
                       Twine.Snooze
                       Twine.Guard

test-suite test
  type:                exitcode-stdio-1.0

  main-is:             test.hs

  ghc-options:         -Wall

  hs-source-dirs:
                       test

  build-depends:
                       base                            >= 3          && < 5
                     , twine
                     , async                           >= 2.0        && < 2.3
                     , directory                       >= 1.2        && < 1.4
                     , exceptions                      >= 0.6        && < 0.9
                     , process                         >= 1.2        && < 1.7
                     , text                            == 1.2.*
                     , time
                     , transformers                    >= 0.3        && < 0.6
                     , transformers-either             == 0.1.*
                     , QuickCheck                      == 2.10.*
                     , quickcheck-instances            == 0.3.*

test-suite test-io
  type:                exitcode-stdio-1.0

  main-is:             test-io.hs

  ghc-options:         -Wall

  hs-source-dirs:
                       test

  build-depends:
                       base                            >= 3          && < 5
                     , twine
                     , async                           >= 2.0        && < 2.3
                     , directory                       >= 1.2        && < 1.4
                     , exceptions
                     , process                         >= 1.2        && < 1.7
                     , text
                     , time
                     , transformers-either
                     , QuickCheck                      == 2.10.*
                     , quickcheck-instances            == 0.3.*

benchmark bench
  type:                exitcode-stdio-1.0
  main-is:             bench.hs
  ghc-options:         -Wall -threaded -O2
  hs-source-dirs:      test
  build-depends:       base
                     , twine
                     , criterion                       >= 1.2        && < 1.6
                     , directory                       >= 1.2        && < 1.4
                     , process                         >= 1.2        && < 1.7
                     , QuickCheck
                     , quickcheck-instances            == 0.3.*
                     , quickcheck-properties           == 0.1.*
                     , quickcheck-text                 == 0.1.*
                     , random
                     , text
                     , transformers
                     , transformers-either            
